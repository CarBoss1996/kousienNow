<div class="card mb-4 mx-auto">
  <div class="card-body">
    <div class="container d-flex flex-column align-items-center">
      <h3>今日の試合</h3>
      <% if @matches.blank? %>
        <h2>今日の試合はありません</h2>
      <% else %>
        <% @matches.each do |match| %>
          <h1 class="mt-3">阪神 VS <%= match.opponent %></h1>
          <h4><%= match.match_date.strftime('%H:%M') %></h4>
          <% if match.stadium.present? %>
            <h5><%= Match::STADIUM_NAMES[match.stadium] %></h5>
          <% end %>
        <% end %>
      <% end %>
      <% if @weather.present? %>
        <div class="weather-info mt-3">
          <h4>
            天気: <%= @weather[:description] %><img src="<%= @weather[:icon_url] %>" alt="<%= @weather[:description] %>">
            気温: <%= @weather[:temp_celsius] %>℃
          </h4>
        </div>
      <% else %>
        <p>天気情報を取得できませんでした。</p>
      <% end %>
    </div>
  </div>
</div>