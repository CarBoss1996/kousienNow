<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-8">
      <h1 class="zen-maru text-center mt-5"><%= t('.title') %></h1>
      <%= form_with model: @user, url: profile_path, method: :put, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="mb-3">
          <%= f.label :user_name, class: "form-label" %>
          <%= f.text_field :user_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :last_name, class: "form-label" %>
          <%= f.text_field :last_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :first_name, class: "form-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :favorite_player, class: "form-label" %>
          <%= f.text_field :favorite_player, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :favorite_viewing_block, class: "form-label" %>
          <%= f.text_field :favorite_viewing_block, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :avatar %>
          <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
          <div class='mt-3 mb-3'>
            <% if @user.avatar.attached? %>
              <%= image_tag @user.avatar_variant, class: 'rounded-circle', id: 'preview' %>
            <% else %>
              <%= image_tag 'sample.jpg', size: '100x100', class: 'rounded-circle', id: 'preview' %>
            <% end %>
          </div>
        </div>
        <div class="text-center mb-3">
        <%= f.submit t('defaults.update'), class: "btn btn-primary", style: "width: 40%;" %>
      <% end %>
        <div class="text-center mt-3">
      </div>
      <p>メールアドレスの変更をしたい方は<a href="#">こちら</a></p>
      <p>パスワードの変更をしたい方は<a href="#">こちら</a></p>
      <p class="mb-5">退会したい方は<%= link_to 'こちら', new_deactivation_path %></p>
    </div>
  </div>
</div>
