<div class="container">
  <div class="row d-flex justify-content-center align-items-center">
    <div class="col-md-8">
      <h1 class="zen-maru text-center mt-5"><%= t('.title') %></h1>
      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success' %>
        <%= link_to '通知設定', @line_bot_link, class: 'btn btn-primary' %>
      </div>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:user_name) %></th>
          <td><%= current_user.user_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:full_name) %></th>
          <td><%= current_user.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:favorite_player) %></th>
          <td><%= current_user.favorite_player %></td>
        </tr>
        <tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:favorite_viewing_block) %></th>
          <td><%= current_user.favorite_viewing_block %></td>
        </tr>
        <tr>
          <th scope="row">通知設定</th>
          <td><%= current_user.line_user_id.present? ? '設定済み' : '未設定' %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td>
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar_variant, class: 'rounded-circle', id: 'preview' %>
            <% else %>
              <%= image_tag 'sample.jpg', size: '100x100', class: 'rounded-circle', id: 'preview' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <div class="card-body mb-3 card-post">
        <div class="row">
          <div class="col-8 col-md-5 mx-auto">
            <%= render post %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <div class="card text-bg-light mb-3 mx-auto" style="max-width: 18rem;">
      <p class="card-text mx-auto"><%= I18n.t('posts.no_result') %></p>
    </div>
    <div class="text-center">
      <%= link_to '投稿してみる！', new_post_path, class: 'btn btn-primary', style: "width: 40%;" %>
    </div>
  <% end %>
  </div>
