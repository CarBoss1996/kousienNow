<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5"><%= t('.title') %></h1>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th scope="row"><%= User.human_attribute_name(:user_name) %></th>
          <td><%= current_user.user_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:full_name) %></th>
          <td><%= current_user.full_name %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:email) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:favorite_player) %></th>
          <td><%= current_user.favorite_player %></td>
        </tr>
        <tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:favorite_viewing_block) %></th>
          <td><%= current_user.favorite_viewing_block %></td>
        </tr>
        <tr>
          <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
          <td>
            <% if current_user.avatar.attached? %>
              <%= image_tag current_user.avatar_variant, class: 'rounded-circle', id: 'preview' %>
            <% else %>
              <%= image_tag 'sample.jpg', size: '100x100', class: 'rounded-circle', id: 'preview' %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <%= render partial: 'posts/post', collection: @user.posts %>
</div>