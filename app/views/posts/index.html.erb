<% content_for(:title, t('.title')) %>
<div class='container d-flex flex-column align-items-center mt-3 mb-3'>
<h1 class="zen-maru"><%= t('.title') %></h1>
<%= link_to t('.create.posts'), new_post_path, class: 'btn btn-success float-right', style: 'width: 50%;' %>
</div>
<% if @posts.present? %>
  <% @posts.each do |post| %>
  <div class="card-body">
    <div class="row justify-content-center">
      <div class="col-12 col-md-4">
        <%= render post %>
      </div>
    </div>
  <% end %>
  <% else %>
  <div class="card text-bg-light mb-3 mt-5 mx-auto" style="max-width: 18rem;">
    <p class="card-text mx-auto"><%= I18n.t('posts.no_result') %></p>
  </div>
<% end %>
