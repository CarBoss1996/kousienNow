<% content_for(:title, t('.title')) %>
<div class='container d-flex flex-column align-items-center mt-3 mb-3'>
  <h1 class="zen-maru my-1"><%= t('.title') %></h1>
  <%= link_to t('.create.posts'), new_post_path, class: 'btn btn-success float-right', style: 'width: 40%;' %>
  <div class="row col-6 mt-5">
    <%= render 'search_form', q: @q, url: posts_path %>
  </div>
</div>
<% if @posts.present? %>
  <% @posts.each do |post| %>
  <div class="card-body">
    <div class="row justify-content-center">
      <div class="col-12 col-md-5">
        <%= render post %>
      </div>
    </div>
  <% end %>
  <% else %>
    <p class="card-text text-center"><%= I18n.t('posts.no_result') %></p>
  </div>
<% end %>
<%= paginate @posts, theme: 'bootstrap-5' %>
