<div class='top-wrapper'>
  <div class='top-inner-text'>
    <title>甲子園NOW!</title>
  </div>
</div>
  <div class="center d-flex flex-column justify-content-center align-items-center">
    <%= render 'matches/matches', matches: @matches %>
    <%= render 'user_locations/location' %>
  <div class="d-grid gap-2 col-11 col-md-6 mx-auto">
      <%= link_to t('user_locations.create.submit'), new_user_location_path, class: 'btn btn-success btn-block' %>
      <%= link_to t('posts.create.submit'), new_post_path, class: 'btn btn-primary btn-block' %>
  </div>
  <% if @posts.present? %>
    <%= render partial: 'posts/post', collection: @posts, as: :post %>
  <% else %>
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <div class="mb-3"><%= I18n.t('posts.no_result') %></div>
      </div>
    </div>
  <% end %>
</div>
