<div class="modal fade" id="guideModal" tabindex="-1" aria-labelledby="guideModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="guideModalLabel">アプリの使い方</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= render 'shared/guide' %>
      </div>
    </div>
  </div>
</div>
<%= image_tag 'header.png', class: 'header-image' %>
<div class="d-flex justify-content-center mt-2">
  <button type="button" class="btn btn-light btn-sm btn-lg-md-up" data-bs-toggle="modal" data-bs-target="#guideModal" style="font-size: 0.75rem;">
    🔰アプリの使い方🔰
  </button>
</div><div class="center d-flex flex-column justify-content-center align-items-center mt-4 mb-4">
  <%= render 'matches/matches', matches: @matches %>
  <%= render 'user_locations/location' %>
  <div class="d-grid gap-2 col-11 col-md-5 mx-auto mt-2 mb-4">
      <%= link_to t('user_locations.create.submit'), new_user_location_path, class: 'btn btn-success btn-block' %>
      <%= link_to t('posts.create.submit'), new_post_path, class: 'btn btn-primary btn-block' %>
  </div>
</div>

  <% if @posts.present? %>
    <% @posts.each do |post| %>
      <div class="card-body mb-3 card-post">
        <div class="row">
          <div class="col-8 col-md-5 mx-auto">
            <%= link_to post_path(post) do %>
              <%= render post %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
  <div class="card text-bg-light mb-3 mx-auto" style="max-width: 18rem;">
    <p class="card-text mx-auto"><%= I18n.t('posts.no_result') %></p>
  </div>
  <% end %>
