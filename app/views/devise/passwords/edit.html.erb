<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <%= render "devise/shared/error_messages", resource: resource %>
            <h1 class="zen-maru"><%= t('.title') %></h1>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

  <div class="md-3">
    <%= f.label :password %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上、半角英数字と記号が使用可能。（ - . ! @ # $ % ^ & * ）)</em><br />
    <% end %>
    <%= f.text_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.text_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
  </div>
    <%= f.submit t('.submit'), class: 'btn btn-primary', style: "width: 40%;" %>
  <% end %>
  <div class='text-center'>
  <%= render "devise/shared/links" %>
  </div>
