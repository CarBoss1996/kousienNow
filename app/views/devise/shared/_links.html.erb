<%- if controller_name != 'sessions' %>
  <%= link_to t('helpers.submit.user.new'), new_user_session_path, class: 'mb-1' %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('helpers.submit.user.create'), new_user_registration_path, class: 'mb-1' %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('helpers.submit.user.forgot_password'), new_user_password_path %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to t('devise.shared.links.didn_t_receive_confirmation_instructions'), new_user_confirmation_path %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to t('devise.shared.links.didn_t_receive_unlock_instructions'), new_user_unlock_path %><br />
<% end %>

