<h1 class="zen-maru mt-3"><%= t('.title') %></h1>
  <div class="row">
    <div class="col-lg-6">
      <table class="table table-bordered" style="background-color: white;">
        <tr>
          <th><%= User.human_attribute_name(:user_name) %></th>
          <td><%= @user.user_name %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:email) %></th>
          <td><%= @user.email %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:first_name) %></th>
          <td><%= @user.first_name %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:last_name) %></th>
          <td><%= @user.last_name %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:avatar) %></th>
          <td><%= image_tag @user.avatar if @user.avatar.present? %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:favorite_player) %></th>
          <td><%= @user.favorite_player %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:favorite_viewing_block) %></th>
          <td><%= @user.favorite_viewing_block %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:location_id) %></th>
          <td><%= @user.location_id %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:role) %></th>
          <td><%= @user.role %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:line_user_id) %></th>
          <td><%= @user.line_user_id %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:provider) %></th>
          <td><%= @user.sns_credential.provider if @user.sns_credential %></td>
        </tr>

        <tr>
          <th><%= User.human_attribute_name(:uid) %></th>
          <td><%= @user.sns_credential.uid if @user.sns_credential %></td>
        </tr>
      </table>
    </div>
  </div>

<%= link_to t('defaults.edit'), edit_admin_user_path(@user) %> |
<%= link_to t('defaults.back'), admin_users_path %>
