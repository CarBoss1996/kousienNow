<p id="notice"><%= notice %></p>

<p>
  <strong><%= Match.human_attribute_name(:match_date) %>:</strong>
  <%= @match.match_date.strftime('%Y-%m-%d %H:%M') %>
</p>

<p>
  <strong><%= Match.human_attribute_name(:event) %>:</strong>
  <%= @match.event&.title %>
</p>

<p>
  <strong><%= Match.human_attribute_name(:opponent) %>:</strong>
  <%= @match.opponent %>
</p>

<p>
  <strong><%= Match.human_attribute_name(:stadium) %>:</strong>
  <%= Match::STADIUM_NAMES[@match.stadium] || @match.stadium %>
</p>

<p>
  <strong><%= Match.human_attribute_name(:result) %>:</strong>
  <%= @match.result %>
</p>

<p>
  <strong><%= Match.human_attribute_name(:team_score) %>:</strong>
  <%= @match.team_score %>
</p>

<p>
  <strong><%= Match.human_attribute_name(:away_team_score) %>:</strong>
  <%= @match.away_team_score %>
</p>

<%= link_to t('defaults.edit'), edit_admin_match_path(@match) %> |
<%= link_to t('defaults.back'), admin_matches_path %>
