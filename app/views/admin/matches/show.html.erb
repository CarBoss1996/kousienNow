<table class="table table-bordered mt-3" style="background-color: white;">
  <tr>
    <th><%= Match.human_attribute_name(:match_date) %>:</th>
    <td><%= @match.match_date.strftime('%Y-%m-%d %H:%M') %></td>
  </tr>

  <tr>
    <th><%= Match.human_attribute_name(:event) %></th>
    <td><%= @match.event&.title %></td>
  </tr>

  <tr>
    <th><%= Match.human_attribute_name(:opponent) %></th>
    <td><%= @match.opponent %></td>
  </tr>

  <tr>
    <th><%= Match.human_attribute_name(:stadium) %></th>
    <td><%= Match::STADIUM_NAMES[@match.stadium] || @match.stadium %></td>
  </tr>

  <tr>
    <th><%= Match.human_attribute_name(:result) %></th>
    <td><%= @match.result %></td>
  </tr>

  <tr>
    <th><%= Match.human_attribute_name(:team_score) %></th>
    <td><%= @match.team_score %></td>
  </tr>

  <tr>
    <th><%= Match.human_attribute_name(:away_team_score) %></th>
    <td><%= @match.away_team_score %></td>
  </tr>
</table>

<%= link_to t('defaults.edit'), edit_admin_match_path(@match) %> |
<%= link_to t('defaults.back'), admin_matches_path %>