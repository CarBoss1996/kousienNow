<% content_for(:title, t('.title')) %>
<div class="container mb-5 pt-2">
  <h1><%= t('.title') %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
      <%= render 'search_form' %>
    </div>
  </div>
  <% (3..10).each do |month| %>
    <%= link_to month, month_admin_matches_path(month: "#{Date.today.year}-#{month.to_s.rjust(2, '0')}") %>
  <% end %>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col"><%= Match.human_attribute_name(:id) %></th>
          <th scope="col"><%= Match.human_attribute_name(:match_date) %></th>
          <th scope="col"><%= Match.human_attribute_name(:event_id) %></th>
          <th scope="col"><%= Match.human_attribute_name(:opponent) %></th>
          <th scope="col"><%= Match.human_attribute_name(:stadium) %></th>
          <th scope="col"><%= Match.human_attribute_name(:result) %></th>
          <th scope="col"><%= Match.human_attribute_name(:team_score) %></th>
          <th scope="col"><%= Match.human_attribute_name(:away_team_score) %></th>
          <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        <%= render @matches %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <!-- ページネーション -->
      <%= paginate @matches %>
    </div>
  </div>
</div>