<tr>
  <td><%= event.id %></td>
  <td><%= event.title %></td>
  <td>
    <% if event.event_dates.first.start_date.present? && event.event_dates.first.end_date.present? && event.event_dates.first.start_date == event.event_dates.first.end_date %>
      <%= event.event_dates.first.start_date.strftime('%m-%d') %>
    <% else %>
      <%= event.event_dates.first.start_date.strftime('%m-%d') if event.event_dates.first.start_date.present? %>ã€œ
      <%= event.event_dates.first.end_date.strftime('%m-%d') if event.event_dates.first.end_date.present? %>
    <% end %>
  </td>
  <td><%= event.created_at.strftime('%Y-%m-%d %H:%M') %></td>
  <td class="d-flex justify-content-end ">
    <%= link_to t('admin.events.show'), admin_event_path(event), class: 'btn btn-primary mx-1' %>
    <%= link_to t('admin.events.edit.label'), edit_admin_event_path(event), class: 'btn btn-secondary' %>
    <%= link_to t('admin.events.delete'), admin_event_path(event), method: :delete, data: { confirm: t('admin.events.confirm_delete') }, class: 'btn btn-danger mx-1' %>
  </td>
</tr>